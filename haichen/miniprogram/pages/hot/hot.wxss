page{
  height: 100%;
}
.selectProject{
  width:100%; height: 480rpx;
  /* margin-top:30rpx; */
  padding:30rpx 28rpx;
  padding-bottom: 60rpx;
  background-color:#fff;
  box-sizing: border-box
}
.common{
  width:100%;
  margin-top:30rpx; 
  padding:30rpx 28rpx;
  background-color:#fff;
  box-sizing: border-box
}
.title{
    margin-bottom: 10rpx;
}
.title image.icon{
  width:6rpx; height:36rpx;
  margin-right: 14rpx;
  vertical-align: middle;
}
.title text.title{
  font-size: 32rpx;
}
.carousel{
  position: relative
}
.carousel swiper{
  height: 380rpx;
}
.carousel swiper swiper-item{
  margin:0 5rpx;
}
.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -40rpx;
  display: flex;
  justify-content: center;
}

.dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #e1e1e1;
  border-radius: 8rpx;
  transition: all .6s;
}
.dot.active{
  width: 40rpx;
  /* background: #34b9b6; */
  background: #ffc325;
}

.carousel image{
  width:690rpx; height: 380rpx;
}

.get-place{
  width: 80%;
  margin:15px auto
}



.table {
  border: 0px solid darkgray;
  display: inline-block;
 }
 .tr {
  display: flex;
  width: 100%;
  height: 4rem;
  
 }
 .td {
  min-width:49%;
  justify-content: center;
  text-align: center;
  line-height: 4rem;
  background: #33cd5f;
  padding: 1rpx 1rpx;
  border: 1rpx solid rgb(225,225,225);
  box-sizing: border-box;
  margin:1rpx;
  border-radius: 8rpx;
  font-size: small;
 }
