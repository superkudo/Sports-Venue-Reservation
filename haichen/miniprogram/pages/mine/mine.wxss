/**index.wxss**/

page {
  /*background: #f6f6f6;*/
  background-image: url("cloud://appointment-qqm06.6170-appointment-qqm06-1301904565/微信图片_20200603152322.jpg");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.back{
  position: absolute;
  z-index: 0;
  /* height: 100vh; */
  width: 100%;
}
.ad{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
}
.ad .wux-button--light, .wux-button--light--disabled{
  color:blue!important
}
.page-body{
  width: 100%;
}

.item{
  color:#414141;
  margin-bottom: 10rpx;
}
.item-text{
  font-size: 32rpx;
}

.mine-info{
  width:100%;height: 420rpx; 
  /* background-color: #fff; */
  margin:22rpx auto 30rpx;
  border-radius: 10rpx;
  position:absolute;
  /* box-shadow: 0 0 5rpx #ccc; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mine-info .userinfo{
  width:200rpx; height: 200rpx;
}
.mine-info .userinfo .userAuthorize{
  margin-top: 50rpx;
  width: auto;
}
.mine-info .userinfo .userinfo-avatar{
  width:200rpx; height: 200rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}
.mine-info .userinfo .userinfo-nickname{
  text-align: center;
  font-weight: bold;
  width: 150%;
  margin-left: -25%;
  /* color:white; */
}
.mine-info .userinfo .userinfo-sex{
  /* color:#888; */
  /* color:white; */
  font-size: 26rpx;
  text-align: center;
  margin-top: 22rpx;
}

.mine-info .user-myphoto-myappoint{
  width:100%; height: 120rpx;
  position: absolute;
  bottom:0;
  border-top:solid 1px #eee;
  display: flex;
  text-align: center;
}
.mine-info .user-myphoto-myappoint .myphoto{
  flex-basis:50%; height: inherit;
  border-right: solid 1px #eee;
}
.mine-info .user-myphoto-myappoint .myappoint{
  flex-basis:50%; height: inherit;
}
.mine-info .user-myphoto-myappoint .title{
  color:#666;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.mine-info .user-myphoto-myappoint .num{
  font-size: 26rpx;
  color:#000;
  margin-top: 10rpx;
}

.mine-btn{
  width:690rpx; height: 88rpx;
  background-color: #5ac0ce;
  line-height: 88rpx;
  color:#fff;
  margin:0 auto 30rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}
.mine-btn image{
  width:46rpx; height: 35rpx;
  vertical-align: text-top;
}

.add-place-button{
  width: 80%;
  margin-left: 10%;
}
.mine-menu{
  display:flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:space-around;
}
.mine-menu>view{
  z-index: 2000;
  font-size: 22rpx;
}
.mainpro{
  width:92%;
  margin-left: 4%;
  padding:4px 0;
  border-radius: 4px;
  background-color: white;
  box-shadow:1px 2px 3px 2px rgb(225,225,225);
  margin-top: 15px;
}
.wux-cell-group__bd::after{
  border-top-width: 0!important;
  border-bottom-width: 0!important;
}